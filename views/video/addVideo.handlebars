<div class="container">
    <div class="card card-body">
        <h3>Add Video Jot</h3>
        <form action="../video/addVideo" method="post" id="addVideo">
            <div class="row"> {{!—- row 1--}}
                <div class="col-lg-9">
                    <div class="form-group">
                        {{!—- Title --}}
                        <label class="font-italic" for="title">Title</label>
                        <textarea class="form-control" id="title" name="title" rows="1"
                            onblur="ProperCase('title')">{{title}}</textarea>
                        {{!-- Practical 09 Activity 02 --}}
                        <a href="#" onclick="getOMdbMovie()" tabindex="-1" class="card-link">
                            <i class="fas fa-film"></i>
                            Get Open Movie DB Data
                        </a>
                        <span class="font-weight-bold text-info" id="OMdbErr" style="display:none">Unavailable</span>
                    </div>
                    <div class="form-group">
                        {{!—- Story --}}
                        <label class="font-italic" for="story">Story</label>
                        <textarea class="form-control" id="story" name="story" rows="7">{{story}}</textarea>
                    </div>
                    <div class="form-group">
                        {{!—- ***New: Starring --}}
                        {{!-- Practical 09 Exercise 01 --}}
                        <label class="font-italic" for="starring">Starring</label>
                        <textarea class="form-control" id="starring" name="starring" rows="1">{{starring}}</textarea>
                    </div>
                </div>
                <div class="col-lg-3">
                    {{!-- Practical 10 Exercise 01 --}}
                    <input type="file" id="posterUpload" name="posterUpload"
                        accept="image/png, image/jpeg,image/jpg,image/gif">
                    {{!—- Poster image --}}
                    <img id="poster" src="/img/no-image.jpg" alt="" class="border img-thumbnail img-fluid"
                        style="height:95%;width:100%">
                    {{!—- Hidden field to submit URL of poster to the server --}}
                    <input id="posterURL" type="hidden" name="posterURL">
                    {{!-- Practical 10 Exercise 01 --}}
                    <div class="font-weight-bold text-danger small" id="posterErr" style="display:none"></div>
                </div>
            </div>
            <div class="form-group">
                <div class="row"> {{!—- row 2--}}
                    <div class="col-12 col-sm-5 col-md-5 col-lg-6">
                        {{!—- Date Release --}}
                        <label class="font-italic">Date of release</label>
                        <input id="datepicker" width="200" name="dateRelease" value="{{dateRelease}}" readonly />
                    </div>
                    <div class="col-12 col-sm-7 col-md-7 col-lg-6">
                        {{!—- Language --}}
                        <label class="font-italic">Language</label>
                        <br>
                        {{!-- Practical 5 Exercise 2: Language checkbox buttons here'--}}
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="language" id="chineseLang"
                                value="Chinese" onclick="ensureCheck('language', 'languageErr', 'butAddVideo')">
                            <label class="form-check-label" for="chineseLang">Chinese</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="language" id="englishLang"
                                value="English" onclick="ensureCheck('language', 'languageErr', 'butAddVideo')">
                            <label class="form-check-label" for="englishLang">English</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="language" id="malayLang" value="Malay"
                                onclick="ensureCheck('language', 'languageErr', 'butAddVideo')">
                            <label class="form-check-label" for="malayLang">Malay</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="language" id="tamilLang" value="Tamil"
                                onclick="ensureCheck('language', 'languageErr', 'butAddVideo')">
                            <label class="form-check-label" for="tamilLang">Tamil</label>
                        </div>
                        <p class="font-weight-bold text-info" id="languageErr" style="display:none">
                            Please select one language
                        </p>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row"> {{!—- row 2--}}
                    <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                        {{!—- Subtitles --}}
                        <label class="font-italic">Subtitles</label>
                        <br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="subtitles" id="chineseSub"
                                value="Chinese">
                            <label class="form-check-label" for="chineseSub">Chinese</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="subtitles" id="englishSub"
                                value="English">
                            <label class="form-check-label" for="englishSub">English</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="subtitles" id="malaySub"
                                value="Malay">
                            <label class="form-check-label" for="malaySub">Malay</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="subtitles" id="tamilSub"
                                value="Tamil">
                            <label class="form-check-label" for="tamilSub">Tamil</label>
                        </div>
                        {{!--<div class="form-check form-check-inline">
							<div class="form-group">
								<input type="text" class="form-control form-control-sm" name="otherSub" id="otherSub" placeholder="Other">
							</div>
						</div>--}}
                    </div>
                    <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                        {{!—- Classification --}}
                        <label class="font-italic">Classification</label>
                        <br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="G" value="G" name="classification" checked>
                            <label class="form-check-label" for="G">G</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="PG" value="PG" name="classification">
                            <label class="form-check-label" for="PG">PG</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="PG13" value="PG13" name="classification">
                            <label class="form-check-label" for="PG13">PG13</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="NC13" value="NC13" name="classification">
                            <label class="form-check-label" for="NC13">NC13</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="M18" value="M18" name="classification">
                            <label class="form-check-label" for="M18">M18</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="R21" value="R21" name="classification">
                            <label class="form-check-label" for="R21">R21</label>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <button id="butAddVideo" type="submit" class="btn btn-primary">Save
            </button>
        </form>
    </div>
</div>

<script>
    $('#datepicker').datepicker({
        format: 'dd/mm/yyyy',
        value: new Date().toLocaleDateString('en-SG'),
        uiLibrary: 'bootstrap4',
    });
</script>